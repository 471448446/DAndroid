<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/news_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border_space_normal"
        android:layout_marginBottom="0dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/text_size_ml"
        tools:text="武汉孕妇临盆被洪水围困 消防营救"/>

    <LinearLayout
        android:id="@+id/news_photo_iv_group"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_photo_iv_left"
            style="@style/news_photo_iv"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/news_photo_iv_middle"
            style="@style/news_photo_iv"
            tools:src="@mipmap/ic_launcher"/>

        <ImageView
            android:id="@+id/news_photo_iv_right"
            style="@style/news_photo_iv"
            tools:src="@mipmap/ic_launcher"/>
    </LinearLayout>

    <TextView
        android:id="@+id/news_ptime_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="@dimen/border_space_normal"
        android:textColor="@color/textColorThird"
        android:textSize="@dimen/text_size_micro"
        tools:text="05-28 20:09"/>

    <View
        style="@style/horizontalDivision"
        android:layout_below="@id/news_ptime_tv"/>
</LinearLayout>

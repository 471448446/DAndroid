<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_animLayoutAnimation"
        style="@style/ClickTitleItem"
        android:text="LayoutAnimation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_animGridLayoutAnimation"
        style="@style/ClickTitleItem"
        android:text="GridLayoutAnimation"
        app:layout_constraintTop_toBottomOf="@+id/main_animLayoutAnimation"/>

</android.support.constraint.ConstraintLayout>
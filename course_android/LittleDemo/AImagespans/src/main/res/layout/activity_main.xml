<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="better.imagespans.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/span_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_normal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_vertical2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_vertical3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/span_top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="@string/app_name"/>

    </LinearLayout>
</ScrollView>

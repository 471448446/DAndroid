<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="better.learn.constraintlayput.MainActivity"
    tools:ignore="GradleDependency">

    <TextView
        android:id="@+id/mian_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="      解决布局嵌的问题，套必须添加约束
        \n1、用match_contraint（0dp）代替match_parent来填充
        \n2、app:layout_constraintDimensionRatio=W,16:6 设置宽高
        \n3、自带weight均分效果,layout_constraintHorizontal_weight控制权重
        \n4、layout_constraintHorizontal_bias,layout_constraintVertical_bias 控制显示在父控件的地方
        \n5、glideLine的使用
        \n6、circleConstrain使用"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_login_Act"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Login"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mian_des" />

    <Button
        android:id="@+id/btn_login_Feed"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Feed流布局"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_Act" />

    <Button
        android:id="@+id/btn_Circle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="onClick"
        android:text="Circle Constrain"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_Feed" />

</android.support.constraint.ConstraintLayout>
